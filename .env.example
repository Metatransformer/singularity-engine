# X API
X_BEARER_TOKEN=your_x_bearer_token
WATCHED_TWEET_ID=your_tweet_id
OWNER_USERNAME=your_x_username

# AWS
AWS_REGION=us-east-1
TABLE_NAME=singularity-db

# GitHub
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your-org/singularity-builds
GITHUB_PAGES_URL=https://your-org.github.io/singularity-builds

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# SingularityDB API
SINGULARITY_DB_URL=https://your-api-gateway.execute-api.us-east-1.amazonaws.com/api/data

# Reply Mode: "openclaw" (default, browser automation) or "x-api" (X API v2 direct posting)
REPLY_MODE=openclaw

# X API OAuth 1.0a (only needed if REPLY_MODE=x-api)
X_CONSUMER_KEY=your_consumer_key
X_CONSUMER_SECRET=your_consumer_secret
X_ACCESS_TOKEN=your_access_token
X_ACCESS_TOKEN_SECRET=your_access_token_secret

# OpenClaw Browser (for reply automation, used when REPLY_MODE=openclaw)
OPENCLAW_CDP_PORT=18800
